<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.krouna.empfehlungsapp_javafx.controllers.EmployeeRegisterController">

    <!-- Überschrift -->
    <Label text="Mitarbeiter Registrierung" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Eingabefelder -->
    <TextField fx:id="usernameField" promptText="Benutzername" />
    <PasswordField fx:id="passwordField" promptText="Passwort" />

    <!-- Optional: Label für Fehlermeldungen -->
    <Label fx:id="errorLabel" textFill="red" />

    <!-- Buttons -->
    <Button text="Registrieren" onAction="#handleRegister" />
    <Button text="Zurück" onAction="#handleBack" />

</VBox>
